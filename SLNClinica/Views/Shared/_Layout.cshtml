

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <h1>Clinica</h1>
    </header>

    <div id="sidebar">
        @if (IsSectionDefined("SideBar"))
        {
            @RenderSection("SideBar")
        }
        else
        {
            <h2>Error en Sidebar</h2>
        }
    </div>

    <nav>
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("Crear Medico", "Index", "Medico")
    </nav>

    <main>

        <div>
            @RenderBody()
        </div>

    </main>

    <footer>
        <p>info@Clinica.com</p>

    </footer>
</body>
</html>
